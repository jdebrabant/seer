<?xml version="1.0"?>
<project name="sampleProject" basedir="." default="compile">
    <property name="src" value="src"/>
    <property name="output" value="bin"/>
    
    <target name="compile" depends="create">
        <javac srcdir="${src}" destdir="${output}" includeantruntime="false"
        classpath="${java.class.path};lib/junit.jar;lib/trove.jar"
        />
    </target>
    
    <target name="clean">
        <delete dir="${output}"/>
    </target>
    
    <target name="create" depends="clean">
        <mkdir dir="${output}"/>
    </target>
</project>